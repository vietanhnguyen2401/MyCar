<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/d_240"
    android:layout_marginHorizontal="@dimen/d_8"
    android:layout_marginBottom="@dimen/d_16"
    android:background="@drawable/bg_border">

    <ImageView
        android:id="@+id/iv_product"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_watch"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.6"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/d_12"
        android:layout_marginBottom="@dimen/d_8"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="Georges-Édouard Piaget set up his first workshop on his family farm in the village of La Côte-aux-Fées"
        android:textColor="@color/color_black_86"
        android:textSize="@dimen/d_16sp"
        app:layout_constraintBottom_toTopOf="@id/tv_price" />

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/d_12"
        android:text="đ 49000"
        android:textColor="@color/color_orange"
        android:textSize="@dimen/d_16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/iv_add"
        android:layout_width="@dimen/d_24"
        android:layout_height="@dimen/d_24"
        android:layout_marginEnd="@dimen/d_12"
        android:foreground="?android:attr/selectableItemBackground"
        android:src="@drawable/ic_buy"
        app:layout_constraintBottom_toBottomOf="@id/tv_price"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_price"
        app:tint="@color/color_blue" />
</androidx.constraintlayout.widget.ConstraintLayout>