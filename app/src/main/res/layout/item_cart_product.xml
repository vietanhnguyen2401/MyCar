<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/d_100"
    android:layout_marginHorizontal="@dimen/d_12"
    android:layout_marginBottom="@dimen/d_8"
    android:background="@drawable/bg_border">

    <ImageView
        android:id="@+id/iv_product"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_watch"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/d_12"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="Georges-Édouard Piaget set up his first workshop on his family farm in the village of La Côte-aux-Fées"
        android:textColor="@color/color_black_86"
        android:textSize="@dimen/d_16sp"
        app:layout_constraintBottom_toTopOf="@id/tv_price"
        app:layout_constraintEnd_toStartOf="@id/tv_quantity"
        app:layout_constraintStart_toEndOf="@id/iv_product"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="đ 49000"
        android:textColor="@color/color_orange"
        android:textSize="@dimen/d_16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/tv_name"
        app:layout_constraintTop_toBottomOf="@id/tv_name" />

    <ImageView
        android:id="@+id/iv_increase"
        android:layout_width="@dimen/d_24"
        android:layout_height="@dimen/d_24"
        android:layout_marginTop="@dimen/d_8"
        android:src="@drawable/ic_add"
        app:layout_constraintEnd_toEndOf="@id/tv_quantity"
        app:layout_constraintStart_toStartOf="@id/tv_quantity"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/color_black_60" />

    <TextView
        android:id="@+id/tv_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/d_100"
        android:text="2"
        android:textColor="@color/color_orange"
        android:textSize="@dimen/d_16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_decrease"
        android:layout_width="@dimen/d_24"
        android:layout_height="@dimen/d_24"
        android:layout_marginBottom="@dimen/d_8"
        android:src="@drawable/ic_minus"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/tv_quantity"
        app:layout_constraintStart_toStartOf="@id/tv_quantity"
        app:tint="@color/color_black_60" />

    <TextView
        android:id="@+id/tv_total_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/d_12"
        android:text="đ 49000"
        android:textColor="@color/color_orange"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>